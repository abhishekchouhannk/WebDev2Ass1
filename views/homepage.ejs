<%- include("templates/header") %>

<!-- homepage.ejs -->
<h1 style="text-align: center; margin-top: 10%; font-family: 'Comic Sans MS'; margin-top: 10%;" class="alert alert-info">Welcome to my app! This is the homepage</h1>

<!-- check if loggedin, and change content based on whether User has a valid session or not-->
<% if (!session.authenticated) { %>
  <div style="text-align: center;">
    <form action="/signUp">
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
    <br>
    <form action="/login">
      <button type="submit" class="btn btn-light" style="border-color: black;">Login</button>
    </form>
  </div>
<% } else { %>
  <div style="text-align: center;">
    <form action="/members">
      <button type="submit" class="btn btn-secondary">Member's Page</button>
    </form>
    <br>
    <form action="/admin">
      <button type="submit" class="btn btn-secondary">Admin's Page</button>
    </form>
    <br>
    <form action="/signout">
      <button type="submit">Sign Out</button>
    </form>
  </div>
<% } %>

<%- include("templates/footer") %>
