<%- include("templates/header") %>

<!-- homepage.ejs -->
<h1 style="text-align: center; margin-top: 10%; color: red; font-family: 'Comic Sans MS'; margin-top: 10%;">Welcome to my app! This is the homepage</h1>

<!-- check if loggedin, and change content based on whether User has a valid session or not-->
<% if (!session.authenticated) { %>
  <div style="text-align: center;">
    <form action="/signUp">
      <button type="submit">Sign Up</button>
    </form>
    <form action="/login">
      <button type="submit">Login</button>
    </form>
  </div>
<% } else { %>
  <div style="text-align: center;">
    <form action="/members">
      <button type="submit">Member's Page</button>
    </form>
    <form action="/signout">
      <button type="submit">Sign Out</button>
    </form>
  </div>
<% } %>

<%- include("templates/footer") %>
